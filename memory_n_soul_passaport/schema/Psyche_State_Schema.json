{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Psyche-State Memory Schema",
    "description": "Schema for Psychological State persistence (EVA Matrix, Qualia, RMS).",
    "type": "object",
    "properties": {
        "eva_matrix": {
            "type": "object",
            "required": [
                "axes_9d",
                "emotion_label"
            ],
            "properties": {
                "axes_9d": {
                    "type": "object",
                    "required": [
                        "stress_load",
                        "social_warmth",
                        "drive_level",
                        "cognitive_clarity",
                        "joy_level",
                        "affective_stability",
                        "social_orientation"
                    ],
                    "additionalProperties": {
                        "type": "number"
                    }
                },
                "emotion_label": {
                    "type": "string"
                }
            }
        },
        "qualia": {
            "type": "object",
            "description": "Artifact Qualia Index state"
        },
        "rms": {
            "type": "object",
            "description": "Resonance Memory System state"
        }
    }
}