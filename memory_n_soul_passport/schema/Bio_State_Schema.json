{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Bio-State Memory Schema",
    "description": "Schema for Biological State persistence (Endocrine, Hemodynamics, Receptors).",
    "type": "object",
    "properties": {
        "endocrine": {
            "type": "object",
            "patternProperties": {
                "^ESC_H[0-9]{2}_[A-Z_]+$": {
                    "type": "number"
                },
                "gland_states": {
                    "type": "object"
                }
            }
        },
        "hemodynamics": {
            "type": "object",
            "required": [
                "heart_rate",
                "blood_pressure_sys",
                "blood_pressure_dia"
            ],
            "properties": {
                "heart_rate": {
                    "type": "number"
                },
                "blood_pressure_sys": {
                    "type": "number"
                },
                "blood_pressure_dia": {
                    "type": "number"
                }
            }
        }
    }
}