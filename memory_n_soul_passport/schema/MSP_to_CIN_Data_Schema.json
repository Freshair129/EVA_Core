{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "MSP_to_CIN_Data_Schema",
    "description": "Schema for memory and psychological state context sent from MSP to CIN",
    "type": "object",
    "required": [
        "turn_context",
        "psychological_context",
        "rag_context"
    ],
    "properties": {
        "turn_context": {
            "type": "object",
            "required": [
                "last_5_turns_summary",
                "interpersonal_atmosphere"
            ],
            "properties": {
                "last_5_turns_summary": {
                    "type": "string"
                },
                "interpersonal_atmosphere": {
                    "type": "string"
                },
                "previous_intent": {
                    "type": "string"
                }
            }
        },
        "session_context": {
            "type": "object",
            "properties": {
                "session_memory_summary": {
                    "type": "string"
                }
            }
        },
        "psychological_context": {
            "type": "object",
            "required": [
                "eva_matrix_state"
            ],
            "properties": {
                "eva_matrix_state": {
                    "type": "object",
                    "required": [
                        "axes_9d"
                    ],
                    "properties": {
                        "axes_9d": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "number"
                            }
                        },
                        "metadata": {
                            "type": "object",
                            "properties": {
                                "emotion_label": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "rag_context": {
            "type": "object",
            "required": [
                "hept_stream_matches"
            ],
            "properties": {
                "hept_stream_matches": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "stream",
                            "content"
                        ],
                        "properties": {
                            "stream": {
                                "type": "string"
                            },
                            "content": {
                                "type": "string"
                            },
                            "score": {
                                "type": "number"
                            }
                        }
                    }
                }
            }
        }
    }
}