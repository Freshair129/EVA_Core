{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Semantic Memory Schema",
    "type": "object",
    "properties": {
        "semantic_id": {
            "type": "string"
        },
        "concept": {
            "type": "string"
        },
        "definition": {
            "type": "string"
        },
        "category": {
            "type": "string"
        },
        "episode_id": {
            "type": "string"
        },
        "relation": {
            "type": "string"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        }
    },
    "required": [
        "semantic_id",
        "concept",
        "definition",
        "timestamp"
    ]
}