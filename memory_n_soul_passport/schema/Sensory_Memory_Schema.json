{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Sensory Memory Schema",
    "type": "object",
    "properties": {
        "sensory_id": {
            "type": "string"
        },
        "episode_id": {
            "type": "string"
        },
        "data_type": {
            "type": "string",
            "enum": [
                "visual",
                "audio",
                "physio_waveform",
                "text_stream"
            ]
        },
        "source": {
            "type": "string"
        },
        "channel": {
            "type": "string"
        },
        "content": {
            "type": "string",
            "description": "Raw content data or URI"
        },
        "features": {
            "type": "object",
            "description": "Extracted feature vectors"
        },
        "quality": {
            "type": "string"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        }
    },
    "required": [
        "sensory_id",
        "data_type",
        "content",
        "timestamp"
    ]
}